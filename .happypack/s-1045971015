import qs from 'qs';

var httpConfig = {
  timeout: 5000,
  contentType: 'application/x-www-form-urlencoded',
  baseUrl: '',

  reqInterceptors: function reqInterceptors(config) {
    if (config.method === 'post') {
      config.data = qs.stringify(config.data);
    }
    return config;
  },

  resInterceptors: function resInterceptors(res) {
    return res;
  }

};

export default httpConfig;